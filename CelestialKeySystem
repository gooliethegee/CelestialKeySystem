  <a href="https://www.youtube.com/@OfficialXGAH" target="_blank" id="ytLink">
    Go to YouTube
  </a>

  <br>
  <button id="generateBtn">Generate Key üóùÔ∏è</button>

  <div id="keyBox"></div>

  <script>
    let ytClicked = false;
    let timerDone = false;

    // When user clicks the YouTube link
    document.getElementById("ytLink").addEventListener("click", () => {
      ytClicked = true;

      // Start a 5 second timer
      setTimeout(() => {
        timerDone = true;
        if (ytClicked && timerDone) {
          document.getElementById("generateBtn").style.display = "inline-block";
        }
      }, 5000);
    });

    // Generate random key with 25+ characters after FREE_
    function generateKey() {
      const chars = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789";
      let randomPart = "";
      for (let i = 0; i < 25; i++) {
        randomPart += chars.charAt(Math.floor(Math.random() * chars.length));
      }
      return "FREE_" + randomPart;
    }

    // Button click
    document.getElementById("generateBtn").addEventListener("click", () => {
      const newKey = generateKey();
      document.getElementById("keyBox").innerText = "Your Key: " + newKey;
    });
  </script>

